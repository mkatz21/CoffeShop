<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".CheckInActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="third.space"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/BlackDieselShopImage"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            app:srcCompat="@drawable/blackdiesel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewBlackDiesel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/BlackDieselWebsiteLink"
                android:textAllCaps="false"
                android:textSize="14pt"
                android:autoLink="web"
                android:linksClickable="true"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewBlackDieselStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/BlackDieselWebsiteStreet"
            android:textAllCaps="false"
            android:autoLink="web"
            android:linksClickable="true"/>
        <TextView
            android:id="@+id/textViewBlackDieselCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/BlackDieselWebsiteCity"
            android:textAllCaps="false"
            android:autoLink="web"
            android:linksClickable="true"/>

        <RelativeLayout
            android:id="@+id/relativeheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="60dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupDuration">

            <TextView
                android:id="@+id/textViewReservationDate"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:gravity="center_horizontal"
                android:hint="Select Date"
                android:textColor="#006064"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/textviewborder"/>

            <TextView
                android:id="@+id/textViewReservationTime"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:gravity="center_horizontal"
                android:hint="Select Time"
                android:textColor="#006064"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/textviewborder"/>
            <Spinner
                android:id="@+id/spinnerReservationDuration"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="240dp"
                android:layout_marginTop="30dp"
                android:textColor="#006064"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/textviewborder"
                android:spinnerMode="dropdown"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeheader2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeheader">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerBDTimeSlots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:textSize="10sp"/>

            </LinearLayout>
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/radioGroupDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9.5dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:text="30 Mins"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="1 Hour"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioButton1half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="1.5 Hours"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="2 Hours"
                android:textSize="14sp" />

        </RadioGroup>


        <RadioGroup
            android:id="@+id/radioGroupTableType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupDuration">

            <RadioButton
                android:id="@+id/radioButtonOwnTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="Own Table"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radioButtonSharedTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Shared Table"
                android:textSize="14sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewCurrentPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Price"
            android:textColor="#006064"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/textviewborder"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupTableType"/>

        <Button
            android:id="@+id/buttonAvailabilityBookNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewCurrentPrice"/>

        <TextView
            android:id="@+id/textViewEspressoRoyaleReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Reviews" />

    </LinearLayout>
</LinearLayout>