<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/third" />

    <Button
        android:id="@+id/Review"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="5dp"
        android:text="Review "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Payments" />

    <Button
        android:id="@+id/Logout"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="34dp"
        android:text="Log out"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Review" />

    <Button
        android:id="@+id/AccountDetails"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="24dp"
        android:text="Account Details "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />

    <Button
        android:id="@+id/PastReservations"
        android:layout_width="174dp"
        android:layout_height="48dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="1dp"
        android:text="Past Reservations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AccountDetails" />

    <Button
        android:id="@+id/Payments"
        android:layout_width="176dp"
        android:layout_height="51dp"
        android:layout_marginStart="125dp"
        android:text="Payments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PastReservations" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="69dp"
        android:layout_height="45dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="NAME"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logout"
        app:srcCompat="@drawable/house" />

</androidx.constraintlayout.widget.ConstraintLayout>